<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/lbl_login_forgotten_password_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text= "Please input below your email and we will send you a token to change your password:"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_login_forgotten_password_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Your E-mail Here!"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textSize="20dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lbl_login_forgotten_password_email"
        app:layout_constraintTop_toBottomOf="@+id/lbl_login_forgotten_password_email" />

</androidx.constraintlayout.widget.ConstraintLayout>
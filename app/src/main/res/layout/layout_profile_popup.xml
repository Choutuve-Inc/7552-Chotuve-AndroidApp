<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/lbl_profile_popup_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text= "Insert"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_profile_popup_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="New Value Here!"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lbl_profile_popup_text"
        app:layout_constraintTop_toBottomOf="@+id/lbl_profile_popup_text" />

</androidx.constraintlayout.widget.ConstraintLayout>